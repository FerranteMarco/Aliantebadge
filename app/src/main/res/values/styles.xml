<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="navigationTheme">
        <!-- Colore del testo quando selezionato -->
        <item name="colorPrimary">@color/light_blue</item>
        <!-- Colore del background quando selezionato -->
        <item name="colorAccent">@color/background_selezionato</item>
        <item name="android:paddingStart">4dip</item>
        <item name="android:paddingEnd">4dip</item>

    </style>

    <style name="colorRadioButton">
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="seekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/black</item>
        <item name="android:progressTint">@color/dark_blue</item>
        <item name="android:thumbTint">@color/dark_blue</item>
    </style>

    <style name="Toolbar.TitleText" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_toolbar</item>
    </style>

</resources>