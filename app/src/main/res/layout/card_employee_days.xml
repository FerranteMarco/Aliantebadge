<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardClientView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/item_color"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/clientViewOptions"
            android:orientation="horizontal"
            android:weightSum="5"
            android:background="@color/item_color"
            android:clickable="true"
            android:padding="5dp"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="12dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/dateWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize2"
                    tools:text="giovedÃ¬ 12 marzo 2023" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="7dp" />

                <TextView
                    android:id="@+id/hoursWork"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize2"
                    tools:text="9:00 - 12:00" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="7dp" />

                <TextView
                    android:id="@+id/usedPhoneModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize2"
                    tools:text="xiaomi mi 9" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginStart="5dp"
                android:layout_weight="4"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_baseline_navigate_next_24_black" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>