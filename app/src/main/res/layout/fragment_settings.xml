<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/languageOptions"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="5"
        android:background="@color/item_color"
        android:clickable="true"
        android:padding="5dp"
        android:focusable="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:text="Lingua"
        android:textColor="@color/black"
        android:textSize="@dimen/text_toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginStart="5dp"
        android:layout_weight="4"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_baseline_navigate_next_24_black" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/themeOptions"
        android:background="@color/item_color"
        android:orientation="horizontal"
        android:clickable="true"
        android:weightSum="5"
        android:padding="5dp"
        android:focusable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Colori e Tema"
            android:textColor="@color/black"
            android:textSize="@dimen/text_toolbar" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24_black" />

    </LinearLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/versionAppOptions"
        android:background="@color/item_color"
        android:orientation="horizontal"
        android:clickable="true"
        android:weightSum="5"
        android:focusable="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:padding="15dp"

            android:text="Controlla versione"
            android:textColor="@color/black"
            android:textSize="@dimen/text_toolbar" />

        <ImageView
            android:id="@+id/versionButton"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24_black" />



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewOption"
        android:background="@color/item_color"
        android:orientation="horizontal"
        android:clickable="true"
        android:weightSum="5"
        android:focusable="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:padding="15dp"

            android:text="Scrivi una recensione"
            android:textColor="@color/black"
            android:textSize="@dimen/text_toolbar" />

        <ImageView
            android:id="@+id/reviewButton"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24_black" />



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>