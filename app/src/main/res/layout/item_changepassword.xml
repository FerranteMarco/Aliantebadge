<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    app:cardBackgroundColor="@color/item_color"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRAdius="5dp">

    <LinearLayout
        android:id="@+id/change_password_button"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:clickable="true">

        <TextView
            android:id="@+id/label_changepassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="10"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/label_changepassword"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_subtitleProfile" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="2"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_baseline_navigate_next_24_orange" />

    </LinearLayout>

</androidx.cardview.widget.CardView>